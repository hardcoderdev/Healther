import kotlin.Int;

CREATE TABLE IF NOT EXISTS Wallet(
    id INTEGER AS Int NOT NULL,
    ownerId INTEGER AS Int NOT NULL,
    capacity INTEGER AS Int NOT NULL,
    coins INTEGER AS Int NOT NULL,
    crystals INTEGER AS Int NOT NULL
);

create:
INSERT INTO Wallet (id, ownerId, capacity, coins, crystals)
VALUES (?, ?, ?,?, ?);

update:
UPDATE Wallet SET capacity = ?, coins = ?, crystals = ?;

provideUserWallet:
SELECT * FROM Wallet WHERE ownerId = ?;