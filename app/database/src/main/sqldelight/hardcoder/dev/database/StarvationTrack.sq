CREATE TABLE IF NOT EXISTS StarvationTrack(
    id INTEGER AS Int NOT NULL PRIMARY KEY,
    startTime INTEGER NOT NULL,
    duration INTEGER NOT NULL,
    starvationPlanId INTEGER AS Int NOT NULL,
    interruptedTimeInMillis INTEGER
);

insert:
INSERT INTO StarvationTrack (id, startTime, duration, starvationPlanId, interruptedTimeInMillis)
VALUES (?, ?, ?, ?, ?);

interruptStarvation:
UPDATE StarvationTrack SET interruptedTimeInMillis = ?, duration = ? WHERE id = ?;

selectStarvationTrackById:
SELECT * FROM StarvationTrack WHERE id = ?;

selectStarvationTrackByStartTime:
SELECT * FROM StarvationTrack WHERE startTime BETWEEN ? AND ?;

selectAllStarvationTracks:
SELECT * FROM StarvationTrack;

selectLastStarvationTracks:
SELECT * FROM StarvationTrack ORDER BY id DESC LIMIT :limit;

selectStarvationDuration:
SELECT MIN(duration), AVG(duration), MAX(duration) FROM StarvationTrack;
