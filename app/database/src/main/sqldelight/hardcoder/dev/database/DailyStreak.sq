import kotlin.Int;
import kotlinx.datetime.Instant;

CREATE TABLE IF NOT EXISTS DailyStreak(
    id INTEGER AS Int NOT NULL,
    startDate INTEGER AS Instant NOT NULL,
    breakdownDate INTEGER AS Instant,
    completionDate INTEGER AS Instant
);

insert:
INSERT INTO DailyStreak (id, startDate, breakdownDate, completionDate)
VALUES (?, ?, ?, ?);

breakStreak:
UPDATE DailyStreak SET breakdownDate = ?;

completeStreak:
UPDATE DailyStreak SET completionDate = ?;

provideAllDailyStreaks:
SELECT * FROM DailyStreak;