import java.lang.Boolean;

CREATE TABLE AppPreference (
    id INTEGER AS Int NOT NULL PRIMARY KEY AUTOINCREMENT,
    isFirstLaunch INTEGER AS Boolean NOT NULL
);

insert:
INSERT INTO AppPreference (id, isFirstLaunch)
VALUES (?, ?);

update:
UPDATE AppPreference SET isFirstLaunch = ? WHERE id = ?;

selectPreferences:
SELECT * FROM AppPreference LIMIT 1;